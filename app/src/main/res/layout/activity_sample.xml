<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:keepScreenOn="true">
<!--
Those aling t tbuttos to each other
      app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_start_streaming"/>

-->


    <ImageView
        android:id="@+id/img_frame"
        android:layout_width="640dp"
        android:layout_height="480dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription"/>
    <TextView
        android:id="@+id/ipView"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="32sp"
></TextView>
    <TextView
        android:id="@+id/portView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/portView2"
        android:textSize="32sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/portView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/portView"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>